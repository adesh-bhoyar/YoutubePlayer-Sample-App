<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".YoutubePlayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtube_player_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#151414"
            app:showYouTubeButton="false"
            app:showFullScreenButton="true" />

        <TextView
            android:id="@+id/playTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#201E1E"
            android:textStyle="bold"
            tools:text="Chris Woakes Leads England To Thrilling Comeback | England v Pakistan 1st Test Day 4 2020" />

        <TextView
            android:layout_width="465dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Description :" />

        <TextView
            android:id="@+id/playDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:padding="10dp"
            android:textColor="#201E1E"
            tools:text="Chris Woakes Leads England To Thrilling Comeback | England v Pakistan 1st Test Day 4 2020  Chris Woakes Leads England To Thrilling Comeback | England v Pakistan 1st Test Day 4 2020" />


    </LinearLayout>


</layout>